{
  "restartable": "rs",
  "name": "expense-splitter-api",
  "ignore": [
    ".git",
    "node_modules/**/node_modules",
    "**/*.test.ts",
    "**/*.spec.ts"
  ],
  "verbose": true,
  "execMap": {
    "ts": "node --require ts-node/register"
  },
  "exec": "ts-node src/server.ts",
  "watch": ["src/**/*.ts"],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "json,ts"
}
